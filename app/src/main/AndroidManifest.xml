<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/salaryimagelogo"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/salaryimagelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.myapplication.SettingsActivity"></activity>
        <activity android:name="com.example.myapplication.HomeScreenActivity"
       android:windowSoftInputMode="adjustResize|adjustPan"> </activity>
        <activity android:name="com.example.myapplication.SplashScreenActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>