<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="63dp"
        android:background="@drawable/customborder"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ctc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter CTC"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:background="@drawable/customborder"
        android:backgroundTint="#e0ffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Total Salary"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/permonth"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="00"
                android:textColor="#007d00"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Total Deduction"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/permonthDeduction"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="00"
                android:textColor="#ff0000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Net Salary"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NetFinalDisplay"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="00"
                android:textColor="#0000ff"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TextView1"
                        android:layout_weight="1"
                        android:background="#778899"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="COMPONENT"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/TextView2"
                        android:layout_weight="1"
                        android:background="#778899"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="PERCENTAGE"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/TextView3"
                        android:layout_weight="1"
                        android:background="#778899"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="AMOUNT"
                        android:textColor="#ffffff" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Basic Pay"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/basicPayPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="30"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/basicPayAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>


                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="HRA"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hraPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="10"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/hraAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Special A."
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/saPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="20"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/saAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Canteen A."
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="05"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/caAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:gravity="center"
                        android:padding="20dip"
                        android:text="SDA"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sdaPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="05"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/sdaAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="EPF"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/epfPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="12"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/epfAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="TAX"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taxPer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/taxAmt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="00"
                        android:textColor="#000000" />

                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>




